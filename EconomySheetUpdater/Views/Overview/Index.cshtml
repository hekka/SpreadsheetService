@model EconomySheetUpdater.Models.OverviewModel
@{
    ViewBag.Title = "Overview";
}

<h2>@Model.Month</h2>
@{
    <div style="width: 100%;">
        <div style="width: 75px; float: left;">
            <h3>Fredrik</h3>
            @foreach (var i in Model.Fredrik)
            {
                if (Model.Fredrik.Last().Equals(i))
                {
                    <hr/>
                }
                @i<br/>
            }
        </div>
        <div style="width: 75px; overflow: hidden; float: left; border-left: solid 1px black; padding-left: 5px; margin-left: 15px;">
            <h3>Henri</h3>
            @foreach (var i in Model.Henri)
            {
                if (Model.Henri.Last().Equals(i))
                {
                    <hr/>
                }
                @i<br/>
            }
        </div>
        <div style="width: 75px; overflow: hidden; border-left: solid 1px black; padding-left: 5px; margin-left: 166px;">
            <h3>Delta</h3>
            @foreach (var i in Model.Delta)
            {
                if (Model.Delta.Last().Equals(i))
                {
                    <hr/>
                }
                @i<br/>
            }
        </div>
    </div>
}